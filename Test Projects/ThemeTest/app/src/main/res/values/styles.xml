<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- these attributes are first "initialized" in attrs.xml-->
    <style name="LightTheme" parent="AppTheme">
        <item name="textColor">#000000</item>
        <item name="metaTextColor">#fafafa</item>
        <item name="bgColor">#ffffff</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="textColor">#ffffff</item>
        <item name="metaTextColor">#234567</item>
        <item name="bgColor">#000000</item>
    </style>

</resources>