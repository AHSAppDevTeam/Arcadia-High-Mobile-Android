<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArcadiaHighMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/brickRed</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:ambientShadowAlpha">.1</item>
        <item name="android:spotShadowAlpha">.1</item>
<!--        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->

        <item name="titleColor">@color/black</item>
        <item name="bodyTextColor">@color/black</item>
        <item name="authorTextColor">@color/article_author_text</item>
        <item name="bgColor">@color/white</item>
        <item name="bgColorAccent">@color/white</item>
        <item name="navBarIconColor">@color/black50</item>
        <item name="navBarIconColor_active">@color/brickRed50</item>
        <item name="navBarIconColorAccent_active">@color/brickRedAccent</item>
    </style>
</resources>