<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item
                android:width="@dimen/navBarIcon_height"
                android:height="@dimen/navBarIcon_height">
                <shape android:shape="oval">
                    <solid android:color="?attr/navBarIconColorAccent_active"/>
                </shape>
            </item>
            <item android:drawable="@drawable/navbar_bulletin_ic_active"
                android:width="@dimen/navBarInnerIcon_height"
                android:height="@dimen/navBarInnerIcon_height"
                android:gravity="center"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:width="@dimen/navBarIcon_height"
                android:height="@dimen/navBarIcon_height">
                <shape>

                </shape>
            </item>
            <item android:drawable="@drawable/navbar_bulletin_ic"
                android:width="@dimen/navBarInnerIcon_height"
                android:height="@dimen/navBarInnerIcon_height"
                android:gravity="center"/>
        </layer-list>
