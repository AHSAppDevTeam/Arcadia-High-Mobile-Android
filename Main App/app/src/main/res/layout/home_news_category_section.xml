<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:paddingBottom="@dimen/padding_x.5">

    <TextView
        android:id="@+id/home_news_sectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_x.5"
        android:layout_marginHorizontal="@dimen/padding"
        android:fontFamily="@font/heavybold_lightregular"
        android:text="@string/article_default_category"
        android:textColor="@color/brightRed"
        android:textSize="24sp"
        android:paddingStart="@dimen/padding_x.5"/>
    <LinearLayout
        android:id="@+id/home_category_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/padding" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_small_carousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingHorizontal="@dimen/padding"
        />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/small_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/tab_layout_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"/>
</LinearLayout>