<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UI.profile.ProfileFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/notification_settings_activity_home_button"
                android:layout_width="@dimen/cornerIconSize"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_x.5"
                android:background="@drawable/icon_circle"
                android:foreground="?attr/actionBarItemBackground"
                android:src="@drawable/activity_navigation_back_arrow"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/notification_settings_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:fontFamily="@font/heavybold_lightregular"
                android:text="@string/notifications_settings_header"
                android:textColor="@color/brightRed"
                android:textSize="28sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/notification_settings_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>